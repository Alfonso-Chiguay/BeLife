        <Label Content="Año de construccion" HorizontalAlignment="Left" Margin="13,370,0,0" VerticalAlignment="Top"/>
        <Label Content="Direccion" HorizontalAlignment="Left" Margin="14,469,0,0" VerticalAlignment="Top"/>
