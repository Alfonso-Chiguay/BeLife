        <Label x:Name="lbl_prima_anual" Content="" HorizontalAlignment="Left" Margin="103,748,0,0" VerticalAlignment="Top" Width="107"/>
        <Label Content="Prima Mensual:" HorizontalAlignment="Left" Margin="11,777,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_prima_mensual" Content="" HorizontalAlignment="Left" Margin="102,779,0,0" VerticalAlignment="Top" Width="108"/>
        <Button x:Name="btn_calcular_primas" Content="Calcular primas"  Style="{DynamicResource boton_clientes}" HorizontalAlignment="Left" Margin="258,757,0,0" VerticalAlignment="Top" Width="92" Height="30" Click="btn_calcular_primas_Click"/>
        <Button x:Name="btn_dar_de_baja" Content="Dar de baja"  Style="{DynamicResource boton_clientes}" HorizontalAlignment="Left" Margin="219,824,0,0" VerticalAlignment="Top" Width="92" Height="30" Click="btn_dar_de_baja_Click" Visibility="Hidden"/>
        <TextBox x:Name="txt_anio_constru" HorizontalAlignment="Left" MaxLength = "7" Height="23" Margin="153,374,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" Foreground="#FFAAA4A4" LostFocus="txt_anio_constru_LostFocus"/>

    </Grid>
</Window>
