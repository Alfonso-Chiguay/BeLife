        <Label x:Name="lbl_postal" Content="" HorizontalAlignment="Left" Margin="172,357,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_nombres" HorizontalAlignment="Left" Height="23" Margin="13,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="txt_apellidos" HorizontalAlignment="Left" Height="23" Margin="156,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <ComboBox x:Name="cb_sexo" HorizontalAlignment="Left" Margin="14,286,0,0" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <ComboBox x:Name="cb_estadoCivil" HorizontalAlignment="Left" Margin="156,286,0,0" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
