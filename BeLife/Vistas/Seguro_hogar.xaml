        <Label Content="Region" HorizontalAlignment="Left" Margin="14,402,0,0" VerticalAlignment="Top"/>
        <Label Content="Comuna" HorizontalAlignment="Left" Margin="156,402,0,0" VerticalAlignment="Top"/>
        <Label Content="Valor inmueble (UF)" HorizontalAlignment="Left" Margin="13,597,0,0" VerticalAlignment="Top"/>
