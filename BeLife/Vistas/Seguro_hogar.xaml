<Window x:Class="BeLife.Vistas.Seguro_hogar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeLife.Vistas"
        mc:Ignorable="d"
        Title="Seguros BeLife | Seguro de vivienda" Height="894.719" Width="531.161" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Codigo postal" HorizontalAlignment="Left" Margin="13,329,0,0" VerticalAlignment="Top"/>
