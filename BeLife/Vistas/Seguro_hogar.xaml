            <Button.Background>
                <ImageBrush ImageSource="/BeLife;component/img/search.png"/>
            </Button.Background>
            <Button.Foreground>
                <ImageBrush ImageSource="/BeLife;component/img/search.png"/>
            </Button.Foreground>
        </Button>
        <DatePicker x:Name="dp_inicio_contrato" HorizontalAlignment="Left" Margin="154,555,0,0" VerticalAlignment="Top"/>
        <Label Content="Inicio contrato" HorizontalAlignment="Left" Margin="13,555,0,0" VerticalAlignment="Top"/>
        <Label Content="Comentarios" HorizontalAlignment="Left" Margin="14,671,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_comentarios" HorizontalAlignment="Left" Height="52" Margin="102,674,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>
        <Label Content="RUT" HorizontalAlignment="Left" Margin="13,151,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cb_idplan" HorizontalAlignment="Left" Margin="103,99,0,0" VerticalAlignment="Top" Width="120" Height="24"/>
        <Label Content="Codigo Plan" HorizontalAlignment="Left" Margin="14,97,0,0" VerticalAlignment="Top"/>
        <Frame x:Name="panelmorado" Content="" HorizontalAlignment="Left" Height="873" VerticalAlignment="Top" Width="90" Background="#FF9F68C5" Margin="433,-9,0,0"/>
